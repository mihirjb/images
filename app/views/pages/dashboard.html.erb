<section>
	<div class="wrapper">
		
		<div class="upload-form">
		<%= form_for @image, :class=>"form-horizontal",  :role => "form", :html => { :multipart => true } do |f| %>
		
			<div class="form-group">
			<div class="input-group-lg">
				<h3>Upload your picture here.</h3>
				<%= f.label :picture, "Upload your picture" %><%= f.file_field :picture %><br/>
			  
			<%= f.text_field :title, :class=> "form-control", :placeholder=>"Title" %>

			<%= f.text_area :description, :class=> "form-control", :placeholder=>"Description" %>
			</div>
			</div>
	


		<div class="form-group">
		<%= f.submit "Add", :disable_with => 'Going...', :class =>"btn btn-success btn-lg btn-block" %>
		</div>
		
		<% end %>
		</div>
		
		<div class="all-images">
			<h3>All your uploaded images.</h3>
			
			<ul class='img-list'>
	<% @images.each do |i|%>
		<li><%=link_to (image_tag i.picture.url('medium')), "/images/#{i.id}"%>
			<h4><%= i.impressionist_count %> views</h4></li>
		<%end %>
		</ul>
		</div>
		
	</div>
</section>